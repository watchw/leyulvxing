<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_second">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:id="@+id/top_img"
        android:layout_marginTop="-10dp"
        android:src="@drawable/chongjiangsuodao2"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/top_img"
        android:id="@+id/l1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_img"
            android:id="@+id/text1"
            android:textSize="25dp"
            android:text="长江索道"
            android:textColor="@color/silver"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_below="@+id/top_img"
            android:layout_marginLeft="220dp"
            android:background="@mipmap/shouchang"
            android:layout_marginTop="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:id="@+id/l2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/rili"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="2020/6/24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l2"
        android:layout_marginTop="10dp"
        android:id="@+id/l3">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/bendi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="返于渝中区的新华路和南岸区的上新街"/>
    </LinearLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t1"
        android:layout_below="@id/l3"
        android:gravity="center">
        <Gallery android:id="@+id/Gallery1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spacing="10dip"/>
        <ImageSwitcher android:id="@+id/ImageSwitcher1"
            android:layout_height="100dp"
            android:layout_width="wrap_content">
        </ImageSwitcher>
    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/t1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="【活动介绍】"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="     长江索道是很多重庆人儿时的记忆。它往返于渝中区的新华路（一、六号线小什字站）和南岸区的上新街（六号线上新街站下车步行5分钟），推荐在上新街乘坐（人更少，小什字那边人特别多）。"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="     推荐分：5.0长江索道，是重庆第二条跨江索道（第一条为嘉陵江索道），已经运行30年，被誉为“万里长江第一条空中走廊”和“山城空中公共汽车”。长江索道是中国自行设计制造的大型跨江客运索道，全长1166米。乘坐重庆长江索道，最适合解读重庆“立体交通”与“山城外型符号”。外地游客到重庆旅游期间，可以乘坐长江索道飞渡大江，在空中欣赏著名的重庆夜景，是一种新鲜感十足的体验。"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>